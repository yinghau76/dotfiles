# vim: set filetype=sh

# For Android SDK
[ -d "$HOME/Library/Android/sdk" ] && export PATH=$PATH:$HOME/Library/Android/sdk/tools:$HOME/Library/Android/sdk/platform-tools

# For Haskell
[ -d "$HOME/Library/Haskell" ] && export PATH="$PATH:$HOME/Library/Haskell/bin"
[ -d "$HOME/.cabal/bin" ] && export PATH="$PATH:$HOME/.cabal/bin"

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='vim'

  platform=`uname`
  if [[ $platform == 'Darwin' ]]; then
    [ -x `which nvim` ] && export EDITOR="nvim"
  fi
fi

# Setup root path of go tools
command -v go >/dev/null 2>&1
if [ $? -eq 0 ]; then
  export GOPATH=$HOME/src/go
  export GOROOT=`go env GOROOT`
  export PATH=$PATH:$GOROOT/bin:$GOPATH/bin
fi

# For Homebrew
export PATH=/usr/local/bin:$PATH

# For personal bin
export PATH=$HOME/bin:$PATH

# For Arcanist
ARCANIST=$HOME/src/php/arcanist
[ -d "$ARCANIST" ] && export PATH="$PATH:$ARCANIST"

# For SBT
export SBT_OPTS=-XX:MaxPermSize=256m
