# vim: set filetype=sh

export EDITOR=vim

# For Android SDK
[ -d "/opt/android-sdk-mac_x86" ] && export PATH=$PATH:/opt/android-sdk-mac_x86/tools:/opt/android-sdk-mac_x86/platform-tools

# For Haskell
[ -d "$HOME/Library/Haskell" ] && export PATH="$PATH:$HOME/Library/Haskell/bin"

# Setup root path of go tools
command -v go >/dev/null 2>&1
if [ $? -eq 0 ]; then
  export GOROOT=`go env GOROOT`
  export GOPATH=$HOME/src/go
  export PATH=$PATH:$GOROOT/bin:$GOPATH/bin
fi

# For Homebrew
export PATH=/usr/local/bin:$PATH

# For personal bin
export PATH=~/bin:$PATH

# For Arcanist
ARCANIST=~/src/php/arcanist
export PATH=$ARCANIST/bin:$PATH

# Use mvim (nofork) as editor
[ -x mvim ] && export EDITOR="mvim -f"

# For SBT
export SBT_OPTS=-XX:MaxPermSize=256m
