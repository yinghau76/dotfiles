[alias]
    co = checkout
    st = status --untracked-files=no
    s = status .
    ci = commit -a
    br = branch
    df = difftool -y
    d  = difftool -y
    dc = difftool -y --cached
    mg = mergetool --tool=araxis
    l  = log --graph
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    unstage = reset HEAD
    discard = checkout --
    sm = submodule
    m = mergetool 

[push]
    # 'git push' should only do the current branch, not all
    default = current

[branch]
    # always setup 'git pull' to rebase instead of merge
    autosetuprebase = always

[diff]
    tool = araxis

[merge]
    tool = araxis

[difftool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/araxiscompare-w.sh -2 \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/araxisgitmerge-w.sh \"$REMOTE\" \"$BASE\" \"$LOCAL\" \"$MERGED\"
	trustExitCode = true
