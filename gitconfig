[alias]
    co = checkout
    discard = checkout --
    st = status --untracked-files=no
    s = status .
    ci = commit
    fixup = commit --amend -C HEAD
    br = branch
    df = diff
    d  = difftool -y
    dc = difftool -y --cached
    mg = mergetool --tool=meld
    l  = log --graph
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    unstage = reset HEAD
    sm = submodule
    sourcetree = !open -a SourceTree .
    untracked = ls-files -o --exclude-standard
    ignored = ls-files --others -i --exclude-standard
    modified = ls-files -m

[push]
    # 'git push' should only do the current branch, not all
    default = current

[branch]
    # always setup 'git pull' to rebase instead of merge
    autosetuprebase = always

[diff]
    tool = araxis
[merge]
    tool = sourcetree

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.5.2/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[difftool]
    prompt = false

[mergetool]
    prompt = false
